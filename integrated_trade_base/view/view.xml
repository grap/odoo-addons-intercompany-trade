<openerp>
    <data>

<!-- Define: res.integrated.trade -->
        <record id="view_res_integrated_trade_tree" model="ir.ui.view">
            <field name="model">res.integrated.trade</field>
            <field name="arch" type="xml">
                <tree string="Integrated Trade" colors="gray:active == False;">
                    <field name="name"/>
                    <field name="customer_company_id"/>
                    <field name="supplier_company_id"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_res_integrated_trade_form" model="ir.ui.view">
            <field name="model">res.integrated.trade</field>
            <field name="arch" type="xml">
                <form string="Integrated Trade" version="7.0">
                    <group col="4" string="General Information">
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group col="4" string="Information in Customer Database">
                        <field name="customer_company_id"/>
                        <field name="supplier_partner_id"/>
                    </group>
                    <group col="4" string="Information in Supplier">
                        <field name="supplier_company_id"/>
                        <field name="customer_partner_id"/>
                    </group>
                </form>
            </field>
        </record>

<!-- Overload: res.partner -->
        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="customer" position="before">
                    <field name="integrated_trade"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
